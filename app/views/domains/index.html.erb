<p id="notice"><%= notice %></p>

<h1>Listing Domains</h1>

<div class="text-right">
    <%= link_to '+ New Domain', new_domain_path, {class: "btn btn-default"} %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @domains.each do |domain| %>
      <tr>
        <td><%= domain.name %></td>
        <td><%= domain.description %></td>
        <td><%= link_to 'Show', domain_path(domain.url_name) %></td>
        <td><%= link_to 'Edit', edit_domain_path(domain.url_name) %></td>
        <td><%= link_to 'Destroy', domain_path(domain.url_name), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

