<div class="container">
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="form_row"><%= f.label :login %>
        <%= f.email_field :login, :autofocus => true %></div>

    <div class="form_row"><%= f.label :password %>
        <%= f.password_field :password %></div></br>

    <% if devise_mapping.rememberable? -%>
        <div class="form_remember"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
